{
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "order/properties-order": [
      {
        "groupName": "Positioning",
        "properties": [
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "z-index"
        ]
      },
      {
        "groupName": "Box Model",
        "properties": [
          "display",
          "width",
          "height",
          "padding",
          "margin",
          "border"
        ]
      },
      {
        "groupName": "Typography",
        "properties": [
          "font",
          "font-size",
          "font-weight",
          "line-height",
          "color",
          "text-align"
        ]
      },
      {
        "groupName": "Visual",
        "properties": [
          "background",
          "opacity",
          "box-shadow"
        ]
      }
    ],
    "scss/at-rule-no-unknown": true,  
    "order/properties-alphabetical-order": null,
    "comment-empty-line-before": null
  }
}
