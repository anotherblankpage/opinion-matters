<footer class="footer row pt-5 bg-mono-900 text-white position-relative">
    <div class="footer__background-video">
        <video autoplay muted loop id="myVideo">
            <source src="{{ theme.link }}/images/footer-video.webm" type="video/mp4">
        </video>
    </div>
    <div class="container">
        <div class="row flex-column flex-lg-row footer-row">
            <div class="col d-flex flex-column justify-content-between align-items-start text-center text-lg-start">
                <img class="footer__brand" src="{{ global.logo_footer.url ? global.logo_footer.url : global.logo_white.url }}" alt="{{ site.title }}" width="100%" />
            </div>
            
            <div class="col mt-5 mt-lg-0">
                
            </div>      

            <div class="col">
                <div class="px-4 px-md-0">
                    <a class="d-block text-decoration-none" href="{{ global.google_maps }}" target="new">{{ global.full_address }}</a>
                </div>

                <div class="px-4 px-md-0 mt-5">
                    <a class="d-block text-decoration-none mt-3" href="tel:{{ global.phone }}" target="new">{{ global.phone }}</a>
                </div>
            </div>


            <div class="col">
                <div class="px-4 px-md-0">
                    <a class="d-block text-decoration-none" href="mailto:{{ global.email }}"><i class="fa-light fa-arrow-right-long me-3"></i>{{ global.email }}</a>
                </div>
                {% for item in global.social_media %}
                <div class="px-4 px-md-0">
                    <a class="d-block text-decoration-none mt-3" href="{{ item.url }}"><i class="fa-light fa-arrow-right-long me-3"></i>{{ item.name }}</a>
                </div>
                {% endfor %}
            </div>
                       
        </div>
    </div>

    <div class="policy-row">
        <div class="container">
            <div class="row flex-column-reverse flex-lg-row py-3">
                <div class="col-12 col-lg-6 text-center text-lg-start ">
                    <h6 class="text-small text-none text-mono-400 m-0">Â© {{ site.title }} All Rights Reserved {{ now|date('Y') }}<span class="text-primary d-inline-block mx-2">-</span>{{ global.copyright }}</h6>
                </div>

                {% if policy_menu.items %}
                <div class="col-12 col-lg-6">
                    <ul class="d-flex align-content-center justify-content-center justify-content-lg-end mb-5 mb-lg-0 p-0">
                        {% for item in policy_menu.items %}
                            <li class="nav-link d-inline-block me-4"><a class="text-small text-mono-400 text-decoration-none" href="{{ item.url }}">{{ item.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</footer>

{{ function( 'wp_footer' ) }}