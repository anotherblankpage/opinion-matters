<div class="accordion-item {{ loop.last ? 'border-right-mono-300' : '' }} {{ loop.first ? 'expand' : '' }}" style="background-image: url({{ content.thumbnail }})" data-padding="48">
    <div class="accordion-trigger" data-bs-toggle="collapse" data-bs-target="#accordionContent-{{ blockId }}-{{ key }}-{{ loop.index }}" aria-expanded="{{ loop.first ? 'true' : 'false' }}" aria-controls="accordionItem-{{ blockId }}-{{ key }}-{{ loop.index }}"></div>

      <div class="accordion-body h-100 d-flex flex-row flex-lg-column justify-content-between p-3">
        <div class="accordion-content">
            <h4 class="text-nowrap">{{ item.title }}</h4>
            <p class="text-mono-600 text-large mt-4">{{ item.content }}</p>
        </div>
        <h5 class="text-mono-500">0{{ loop.index }}</h5>
      </div>

</div>