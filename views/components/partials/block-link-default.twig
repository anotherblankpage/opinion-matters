{# BLOCK LINK DEFAULT #}

{% for block_link in source.block_link %}

   <a class="block-link {{ source.link_style }}" href="{{ block_link.link['url'] }}" target="new">
      <div class="block-link__content">
         <div class="block-link__eyebrow purple">
            {{ block_link.eyebrow }}
         </div>
         <div class="block-link__title h6 m-0 text-none">
            {{ block_link.title }}
         </div>
      </div>
      <div class="block-link__media">
         {% if source.link_style == "image" %}
            <img class="block-link__image" src="{{ block_link.image['url'] }}" alt="{{ block_link.image['alt'] ? block_link.image['alt'] : block_link.image['title'] }}" />
         {% else %}
            {% if block_link.link %}
               <span class="icon-btn round lg bg-mono-900 ms-md-4 text-white"><i class="fa-light fa-arrow-right-long"></i></span>
            {% endif %}
         {% endif %}
      </div>
   </a>

{% endfor %}