<div data-padding-top="36" data-padding-bottom="36">

    <div class="contact row">

        {% if 'email' in source.display %}
        <div class="col-12 col-md px-4 mt-5 contact__item">
            <a class="contact__info" href="mailto:{{ global.email }}">
                <span class="label text-primary-900">Email</span>
                <span class="h4 d-block">{{ global.email }}</span>
            </a>
        </div>
        {% endif %}

        {% if 'phone' in source.display %}
        <div class="col-12 col-md px-4 mt-5 contact__item">
            <a class="contact__info" href="tel:{{ global.phone }}">
                <span class="label text-primary-900">Phone</span>
                <span class="h4 d-block ">{{ global.phone }}</span>
            </a>
        </div>
        {% endif %}

        {% if 'address' in source.display %}
        <div class="col-12 col-md px-4 mt-5 contact__item">
            <a class="contact__info" href="tel:{{ global.google_maps }}">
                <span class="label text-primary-900">Address</span>
                <span class="h4 d-block ">{{ global.address }}</span>
            </a>
        </div>
        {% endif %}

        {% if 'social' in source.display %}
        <div class="col-12 col-md px-4 mt-5 contact__item">
            <div class="contact__info">
                <span class="label text-primary-900">Social</span>
                <span class="h4 d-block">{{ global.social_tag }}</span>
            </div>
        </div>
        {% endif %}

    </div>

</div>