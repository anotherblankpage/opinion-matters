<div class="offcanvas offcanvas-start bg-mono-100 text-black" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenu">
  <div class="offcanvas-header p-0">
    <div class="row m-0 w-100">
      <div class="offcanvas-header__inner col-12 border-bottom-mono-300 border-right-mono-300">
        <a class="d-flex offcanvas__close align-items-center text-decoration-none" data-bs-dismiss="offcanvas" aria-label="Close"><span class="icon-btn md hover-btn bg-mono-200"><i class="fa-solid fa-xmark"></i></span><span class="d-block text-white ms-2">Close</span></a>
      </div>
    </div>
  </div>
  <div class="offcanvas-body p-0">
    <div class="d-block d-md-flex h-100">
      {# Navigation #}
      <div class="col-12  p-0 mb-4 mb-md-0 border-right-mono-300">
        <ul id="menu" class="menu__wrapper d-flex flex-column m-0 p-0">
            {% for item in primary_menu.items %}
                <li class="nav-link menu-link" style="transition-delay: {{ loop.index * 100 }}ms">
                  <a class="nav-link__item d-block text-decoration-none border-bottom-mono-300 p-4 {{ item.class }}" href="{{ item.url }}">
            
                      {{ item.title }}
               
                  </a>
                </li>
            {% endfor %}
            {% for item in cta_menu.items %}
                <li class="nav-link menu-link" style="transition-delay: {{ loop.index * 100 }}ms">
                  <a class="nav-link__item d-block text-decoration-none border-bottom-mono-300 p-4" href="{{ item.url }}">
                    {{ item.title }}
                  </a>
                </li>
            {% endfor %}
        </ul>
      </div>

    </div>

    
  </div>


</div>