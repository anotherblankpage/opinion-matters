{% extends 'blocks/base-block.twig' %}

{% set block_name = 'slider' %}
{% set cellClass = 'slide' %}
{% block content %}


<div id="{{ block.id }}-slick-slider" data-arrow-ele="#{{ block.id }}-arrows" class="slick {{ fields.card_type }}-slider" data-num-slides="{{ fields.number_of_columns }}" data-arrows="true" data-autoplayspeed="10000">

    {% if fields.card_type == 'default' %}
        {% for item in fields.cards %}
        <div class="{{ cellClass }}">
            <div data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                {% include 'components/card.twig' with {'item': item, 'linkTitle': 'Visit Website', 'key': block.id ~ loop.index } %}
            </div>
        </div>
        {% endfor %}
    {% elseif fields.card_type == 'case-study' %}
        {% for item in fields.case_study_cards %}
        <div class="{{ cellClass }}">
            <div data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                {% include 'components/card-case-study.twig' with {'item': item } %}
            </div>
        </div>
        {% endfor %}
    {% endif %}

</div>

